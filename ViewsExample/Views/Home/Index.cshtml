@using ViewsExample.Models;
@{
    string appTitle = "Asp.Net Core Variable";
    Person person = new Person() 
    { 
        Name = "Leandro Luz", 
        DateOfBirth = Convert.ToDateTime("2020-03-02")
    };
}

<!DOCTYPE html>
<html>
    <head>
        <title>@appTitle</title>
        <meta charset="utf-8" />
    </head>
    <body>
        <h1>Welcome</h1>
        <h2>Hello @person.Name</h2>
    @{
        double age = Math.Round((DateTime.Now - person.DateOfBirth).TotalDays / 365.25);
    }
    <h3>@age</h3>
    </body>
</html>